@model  CsvWebParser.Models.FileViewModel

@using (Html.BeginForm("FileUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row" style="min-height:400px;">
        <h2 style="text-align:center;">CSV Uploader</h2>
        <div id="main_content">
            <div id="fileUploadDiv">
                <div class="form-group">
                    <input type="file" name="File" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" required />
                </div>
                <div class="form-group" style="text-align:center;">
                    <input type="submit" value="Upload" class="btn btn-primary" style="text-align:center;" />
                </div>
            </div>
        </div>
    </div>
}
